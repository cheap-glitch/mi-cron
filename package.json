    "eslint": "^8.6.0",
    "eslint-plugin-smarter-tabs": "^1.2.0",
    "jest": "^27.4.7",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
