{
  "name": "@cheap-glitch/mi-cron",
  "description": "A microscopic parser for standard cron expressions.",
  "version": "1.0.1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/mi-cron.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/mi-cron/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/mi-cron#readme",
  "keywords": [
    "cron",
    "cron-expression",
    "crontable",
    "parser"
  ],
  "main": "./build/index.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:minify",
    "build:minify": "terser --compress --mangle toplevel --comments '/^!/' --output build/index.min.js -- build/index.js",
    "build:ts": "tsc",
    "coverage": "jest --coverage",
    "coverage:report": "npm run coverage && codecov --disable=gcov",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-plugin-smarter-tabs": "^1.1.2",
    "jest": "^26.6.3",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.3"
  }
}
